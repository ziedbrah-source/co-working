{% extends 'layout.html.twig' %}
   {% block title %}
       Reservation
   {% endblock %}
    {%  block body %}
        <div class="container">
            <div class="card-deck">
                {% for salle in salles %}
                    <div class="card col3">
                        <img class="card-img-top" src="{{ vich_uploader_asset(salle, 'imageFile') }}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{  salle.nom }}</h5>
                            <p class="card-text">Nombre de tables : {{ salle.getNbrTables() }}
                            <small class="text-muted">Prix : {{ salle.getPrix() }} &euro; / Heure</small></p>
                            <a href="{{ path('salle.reservation',{'salle' : salle.id}) }}" style="float: left" class="btn btn-outline-info">RÃ©servez maintenant!</a>
                            <a href="{{ path('salle.detail',{'salle' : salle.id}) }}" style="float: right" class="btn btn-outline-info">Details</a>
                        </div>
                    </div>
                {% endfor %}

            </div>
            {{ pagination.display() }}
        </div>
    {% endblock %}