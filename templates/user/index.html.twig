{% extends 'layout.html.twig' %}

{% block title %}Page de {{ user.getFullName() }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row align-items-center">
        <div class="col-3 text-center">
            <img class="avatar mb-3" src="{{ vich_uploader_asset(user) }}" alt="{{ user.getFullName() }}">
            <br>
            <span class="badge badge-primary">On va mettre Ici les nombres des réservations</span>
        </div>
        <div class="col-9">
            <h1>{{ user.fullName }}</h1>
            {% if user is same as(app.user) %}
                <div class="mt-3">
                    <a href="{{ path('account_profile') }}" class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                    <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                </div>
            {% endif %}

        </div>
<h1>{{ user.introduction }}</h1>
        <hr>
        <table style="width:100%">
            <tr>
                <th>ID de réservations</th>
                <th>Faite par</th>
                <th>Date début</th>
                <th>Date fin</th>
                <th>Description</th>
                <th>Motif</th>
            </tr>
            <tr>
                {% for reservation in reservations %}
                    <td>{{ reservation.id }}</td>
                    <td><a href="/user/{{ reservation.userID }}">{{ reservation.userID }}</td>
                    <td>{{ reservation.date_debut }}</td>
                    <td>{{ reservation.date_fin }}</td>
                    <td>{{ reservation.description }}</td>
                    <td>{{ reservation.motif }}</td>
                {% endfor %}
            </tr>
        </table>

    </div>
</div>
{% endblock %}
