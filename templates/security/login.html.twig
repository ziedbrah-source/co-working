{% extends 'layout.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/styles.min.css') }}">

{% endblock %}

{% block body %}
<section class="login-clean">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}



    <h2 class="visually-hidden">Connectez Vous</h2>
    <div class="illustration"><i class="icon ion-ios-navigate"></i></div>
    <label for="inputEmail">Email</label>
    <div class="mb-3"><input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus></div>
    <label for="inputPassword">Password</label>
        <div class="mb-3"><input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required></div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <div class="mb-3"><button class="btn btn-lg btn-primary" type="submit">Connectez Vous</div>
    <a href="{{ path("app_forgot_password_request") }}" class="btn btn-primary">Vous avez perdu votre mot de passe? Cliquez ici.</a>


    </button>
</form>
</section>
    <hr>

{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
