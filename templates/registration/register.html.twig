{% extends 'layout.html.twig' %}

{% block title %}Register{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="{{ asset('assets/css/styles.min.css') }}">
{% endblock %}

{% block body %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <section class="register-photo">
        <div class="form-container" >
            <div class="image-holder"></div>

    {{ form_start(registrationForm) }}
        <h2 class="text-center"><strong>Inscrivez</strong> Vous dans notre Site.</h2>
        <div class="mb-3"> {{ form_row(registrationForm.firstName) }}</div>
        <div class="mb-3"> {{ form_row(registrationForm.lastName) }}</div>
        <div class="mb-3">{{ form_row(registrationForm.email) }}</div>
        <div class="mb-3">{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</div>
        <div class="mb-3">{{ form_row(registrationForm.passwordConfirm) }}</div>
        <div class="mb-3">{{ form_row(registrationForm.imageFile) }}</div>
        <div class="mb-3">{{ form_row(registrationForm.introduction) }}</div>


        <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Inscrivez Vous</button></div>
        <a class="already" href="{{ path('app_login') }}">Avez vous déjà un compte? Connectez-vous ici.</a>
    {{ form_end(registrationForm) }}
    </div>
</section>
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
