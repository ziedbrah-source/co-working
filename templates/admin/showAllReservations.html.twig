
{% extends 'layout.html.twig' %}
{% block title %}Listes de tout les comptes{% endblock %}


{% block body %}
    <table style="width:100%">
        <tr>
            <th>ID de réservation</th>
            <th>Faite par</th>
            <th>Date début</th>
            <th>Date fin</th>
            <th>Description</th>
            <th>Motif</th>
        </tr>
            {% for reservation in reservations %}
        <tr>
                <td>{{ reservation.id }}</td>
                <td><a href="{{ path('user_show',{id: reservation.userID}) }}">{{ reservation.userID }}</td>
                <td>{{ reservation.date_debut }}</td>
                <td>{{ reservation.date_fin }}</td>
                <td>{{ reservation.description }}</td>
                <td>{{ reservation.motif }}</td>
                <td>{{ form_start(forms[reservation.id]) }}<button type="edit" class="btn">Edit</button>
                    <button type="delete"  class="btn">Delete</button>
                    {{ form_end(forms[reservation.id]) }}
                </td>
        </tr>
            {% endfor %}
    </table>
{% endblock %}